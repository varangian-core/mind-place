version: '3.8'

services:
  app:
    image: node:18
    container_name: mindplace_app
    restart: unless-stopped
    working_dir: /app
    volumes:
      - ../:/app
      - ${CONFIG_DIR:-./config}:/config
    ports:
      - "${APP_PORT:-3000}:3000"
    environment:
      - NODE_ENV=production
      - CONFIG_FILE=/config/secrets.env
      - DATABASE_STARTUP_DELAY=${DATABASE_STARTUP_DELAY:-10}
      - DATABASE_URL=postgresql://${DB_USER:-mindplace}:${DB_PASSWORD}@db:5432/${DB_NAME:-mindplace}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/api/health"]
      interval: 10s
      timeout: 5s
      retries: 6
      start_period: 30s
    depends_on:
      db:
        condition: service_healthy
    command: sh -c "npm install --production=false && npm run migrate && npm run build && npm run start"

  db:
    image: postgres:16
    container_name: mindplace_db
    restart: unless-stopped
    environment:
      POSTGRES_USER: ${DB_USER:-mindplace}
      POSTGRES_PASSWORD: ${DB_PASSWORD:-mindplace}
      POSTGRES_DB: ${DB_NAME:-mindplace}
    ports:
      - "${DB_PORT:-5432}:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./initdb:/docker-entrypoint-initdb.d
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${DB_USER:-mindplace}"]
      interval: 5s
      timeout: 5s
      retries: 5

volumes:
  postgres_data:

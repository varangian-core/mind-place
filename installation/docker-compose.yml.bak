version: '3.8'

services:
  app:
    image: node:20
    container_name: mindplace_app
    restart: unless-stopped
    working_dir: /app
    volumes:
      - ../:/app
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
      - CONFIG_FILE=/Users/odin/.config/mindplace/secrets.env
      - DATABASE_STARTUP_DELAY=10
      - DATABASE_URL=postgresql://mindplace:mindplace@db:5432/mindplace
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/api/health"]
      interval: 10s
      timeout: 5s
      retries: 6
      start_period: 30s
    depends_on:
      db:
        condition: service_healthy
    command: sh -c "npm install --production=false && npm run migrate && npm run build && npm run start"

  db:
    image: postgres:16
    container_name: mindplace_db
    restart: unless-stopped
    environment:
      POSTGRES_USER: mindplace
      POSTGRES_PASSWORD: mindplace
      POSTGRES_DB: mindplace
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U mindplace"]
      interval: 5s
      timeout: 5s
      retries: 5

volumes:
  postgres_data:
